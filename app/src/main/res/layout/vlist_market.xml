<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/tv_stock_name"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/tv_stock_number"
            android:gravity="center"
            android:layout_below="@+id/tv_stock_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_toLeftOf="@+id/bt_stock_purchase"
        android:layout_toStartOf="@+id/bt_stock_purchase">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="New Text"
            android:id="@+id/tv_stock_price"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="New Text"
            android:id="@+id/tv_stock_rate"
            android:gravity="center"
            android:layout_below="@+id/tv_stock_price"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="New Text"
            android:id="@+id/tv_stock_holding"
            android:layout_below="@+id/tv_stock_rate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center" />
    </RelativeLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="PURCHASE"
        android:id="@+id/bt_stock_purchase"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bt_stock_sell"
        android:layout_toStartOf="@+id/bt_stock_sell"
        android:textSize="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="SELL"
        android:id="@+id/bt_stock_sell"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="10dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
