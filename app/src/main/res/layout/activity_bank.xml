<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Money in hand:"
        android:id="@+id/bank_textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/bank_textView2"
        android:layout_alignTop="@+id/bank_textView1"
        android:layout_toRightOf="@+id/bank_textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Money in bank:"
        android:id="@+id/bank_textView3"
        android:layout_below="@+id/bank_textView1"
        android:layout_alignLeft="@+id/bank_textView1"
        android:layout_alignStart="@+id/bank_textView1"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/bank_textView4"
        android:layout_alignTop="@+id/bank_textView3"
        android:layout_toRightOf="@+id/bank_textView3"
        android:layout_alignRight="@+id/bank_textView2"
        android:layout_alignEnd="@+id/bank_textView2"
        android:gravity="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rate for this round:"
        android:id="@+id/bank_textView5"
        android:layout_below="@+id/bank_textView3"
        android:layout_alignLeft="@+id/bank_textView3"
        android:layout_alignStart="@+id/bank_textView3"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.00%"
        android:id="@+id/bank_textView6"
        android:layout_below="@+id/bank_textView3"
        android:layout_toRightOf="@+id/bank_textView5"
        android:layout_alignRight="@+id/bank_textView4"
        android:layout_alignEnd="@+id/bank_textView4"
        android:gravity="center" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="PUT IN"
        android:id="@+id/bank_button1"
        android:layout_below="@+id/bank_textView5"
        android:layout_alignLeft="@+id/bank_textView5"
        android:layout_alignStart="@+id/bank_textView5" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="WITHDRAW"
        android:id="@+id/bank_button2"
        android:layout_below="@+id/bank_textView5"
        android:layout_toRightOf="@+id/bank_button1"
        android:layout_toEndOf="@+id/bank_button1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXTROUND"
        android:id="@+id/bank_button3"
        android:layout_below="@+id/bank_button1"
        android:layout_alignLeft="@+id/bank_button1"
        android:layout_alignStart="@+id/bank_button1" />

</RelativeLayout>